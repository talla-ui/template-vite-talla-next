{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "jsxFactory": "ui.jsx",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src"]
}
